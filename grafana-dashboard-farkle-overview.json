{
  "id": null,
  "uid": "farkle-overview",
  "title": "Farkle - Overview",
  "tags": ["farkle", "monitoring", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "style": "dark",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
    "time_options": ["15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Active games",
      "description": "Current number of active games in memory",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "farkle_active_games"
        }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "WebSocket connections",
      "description": "Current active WebSocket connections",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "farkle_ws_connections"
        }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 0 },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Games created per minute",
      "description": "Rate of games created over time",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "rate(farkle_games_created_total[5m])"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 3
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Players joined per minute",
      "description": "Rate of players joining games",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "rate(farkle_games_joined_total[5m])"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 3
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Farkles per minute",
      "description": "Rate of farkle events",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "rate(farkle_farkles_total[5m])"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 3
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Roll duration (p50 & p95)",
      "description": "Latency of roll handling using histogram_quantile",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.5, sum(rate(farkle_roll_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(farkle_roll_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    }
  ]
}

